type
  TTuFrmcompraporxml = class(TForm)
    btn1: TButton;
    btn2: TButton;
    cdsxml: TClientDataSet;
    dsxml: TDataSource;
    dlgOpen1: TOpenDialog;
    dbgrd1: TDBGrid;
